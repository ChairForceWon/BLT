
            

    
    <!-- Modal -->
<div class="modal fade" id="modal<%=contacts._id%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><strong><a href="/contact/<%=contacts._id%>"><%=contacts.firstName%> <%=contacts.lastName%></a></strong></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
        <div class="modal-body">
            <form action="/contact/<%= contacts._id %>/?_method=PUT" method="POST">   
       
        <div class="col-lg-4">
            <select class="form-control" name="contact[contactStrength]" value="<%=contacts.contactStrength%>">
                <option <% if (contacts.contactStrength == "Hot") { %> selected <% } %> value="Hot">Hot</option>
                <option <% if (contacts.contactStrength == "Warm") { %> selected <% } %> value="Warm">Warm</option>
                <option <% if (contacts.contactStrength == "Cold") { %> selected <% } %> value="Cold">Cold</option>
            </select>
        </div>
            <div class="button-group pull-right">
                <div class="form-group">
                    <button class="btn btn-xs btn-primary btn-block">Save</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            </div>
        <div class="form-group">
            <form action="/contact/<%= contacts._id %>/comments" method="POST">
                <div class="form-group">
                    <textarea class="form-control" type="text" name ="comment[text]" placeholder="text"></textarea>
                    <button class="btn btn-sm btn-primary">Submit!</button>
                </div>
            </form>
          </div>
        </div>
        </div>
    </div>
</div>