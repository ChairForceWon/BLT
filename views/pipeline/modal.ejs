
            


    <!-- Modal -->
<div class="modal fade" id="modal<%=contacts._id%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="row m-auto">
                    <div class="col-lg">
                        <h3 class="modal-title"><strong><a href="/contact/<%=contacts._id%>"><%=contacts.firstName%> <%=contacts.lastName%></a></strong></h3>
                    </div>
                </div>
                    <div class="row">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                </div>
            </div>
        <div class="modal-body">
            <div class="container-fluid">
                <form action="/contact/<%= contacts._id %>/?_method=PUT" method="POST">
                <div class="row justify-content-md-center">
                    <div class="col-md-auto">
                        <strong><p><%=contacts.phone%></p></strong>
                    </div>
                    <div class="col-md-auto">
                        <strong><p><%=contacts.email%></p></strong>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg">
                        <strong><p>Current Task: </strong><em><select class="form-control" name="contact[currentTask]" value="<%=contacts.currentTask%>">
                            <option <% if (contacts.currentTask == "New Lead, Unquoted") { %> selected <% } %> value="New Lead, Unquoted">New Lead, Unquoted</option>
                            <option <% if (contacts.currentTask == "Quoted") { %> selected <% } %> value="Quoted">Quoted</option>
                        </select></em></p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg">
                        <button type="button" 
                        <% if (contacts.currentTask == "New Lead, Unquoted") { %>
                            class="btn btn-secondary btn-quoted" >Not Quoted
                        <% } else if (contacts.currentTask == "Quoted") { %>
                             class="btn btn-success active" >Quoted
                        <% } %>
                        </button>
                    </div>
                </div>
           
            <div class="button-group pull-right">
                <div class="form-group">
                    <button class="btn btn-xs btn-primary">Save</button>
                </div>
            </div>
                </form>
            </div>
        </div>

        <div class="modal-footer">
            </div>
        </div>
    </div>
</div>

<script>
    $('button').click(function(){
    $(this).text(function(i,old){
        return old=='Quoted' ?  'Un-Quoted' : 'Quoted';
    });
});
</script>

