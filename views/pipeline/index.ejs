<!--Leads Page that shows all contacts-->
<% include ../partials/header %>
<div class="container-fluid">
    <a class="btn btn-primary" href="#" data-toggle="modal" data-backdrop="static" data-target="#newContactModal" >Add new contact</a>
    <div class="row">
        <div class="col-lg-6" id="prospectPipeline">
            <div class="panel">
                <h2>Leads (Unquoted)</h2>
                    <div class="row">
                        <div class= "col-sm-4" id= "leadFollowUp">
                            <p>New/Requote</p>
                            <table class="table table-hover small-rows">
                                <% contacts.forEach(function(contacts){ %>
                                    <% if (contacts.contactType == "Lead" && contacts.contactStatus == "New") { %>
                                        <tr>
                                            <td>
                                                <strong><%= contacts.contactStrength%> - <a href="#" data-toggle="modal" data-backdrop="static" data-target="#modal<%=contacts._id%>"><%=contacts.firstName%> <%=contacts.lastName%></a></strong>
                                            </td>
                                        </tr>
                                <% include ../pipeline/modal %>
                                 <% }; %>
                                <% }); %>
                            </table>
                        </div>
                        <div class= "col-sm-4" id= "leadFollowUp">
                            <p>Lead Follow Up</p>
                                <table class="table table-hover small-rows">
                                    <% contacts.forEach(function(contacts){ %>
                                        <% if (contacts.contactType == "Lead" && contacts.contactStatus == "Lead Follow Up") { %>
                                            <tr>
                                                <td>
                                                    <strong><%= contacts.contactStrength%> - <a href="#" data-toggle="modal" data-backdrop="static" data-target="#modal<%=contacts._id%>"><%=contacts.firstName%> <%=contacts.lastName%></a></strong>
                                                </td>
                                            </tr>
                                    <% include ../pipeline/modal %>
                                    <% }; %>
                                <% }); %>
                            </table>
                        </div>
                        <div class= "col-sm-4" id= "leadFollowUp">
                            <p>Quote Scheduled</p>
                                <table class="table table-hover small-rows">
                                    <% contacts.forEach(function(contacts){ %>
                                        <% if (contacts.contactType == "Lead" && contacts.contactStatus == "Lead Follow Up") { %>
                                            <tr>
                                                <td>
                                                    <strong><%= contacts.contactStrength%> - <a href="#" data-toggle="modal" data-backdrop="static" data-target="#modal<%=contacts._id%>"><%=contacts.firstName%> <%=contacts.lastName%></a></strong>
                                                </td>
                                            </tr>
                                    <% include ../pipeline/modal %>
                                    <% }; %>
                                <% }); %>
                            </table>                            
                        </div>    
                    </div>
            </div>
        </div>
        <div class="col-lg-6" id="prospectPipeline">
            <div class="panel">
                <h2>Prospects (Quoted)</h2>
                    <div class="row">
                        <div class= "col-sm-4" id= "prospectFollowUp">
                            <p>Prospect Follow Up</p>
                            <table class="table table-hover small-rows">
                                <% contacts.forEach(function(contacts){ %>
                                    <% if (contacts.contactType == "Prospect" && contacts.contactStatus == "Prospect Follow Up") { %>
                                        <tr>
                                            <td>
                                                <strong><%= contacts.contactStrength%> - <a href="#" data-toggle="modal" data-backdrop="static" data-target="#modal<%=contacts._id%>"><%=contacts.firstName%> <%=contacts.lastName%></a></strong>
                                            </td>
                                        </tr>
                                <% include ../pipeline/modal %>
                                 <% }; %>
                                <% }); %>
                            </table>
                        </div>
                        <div class= "col-sm-4" id= "prospectFollowUp">
                            <p>Sale Scheduled</p>
                                <table class="table table-hover small-rows">
                                    <% contacts.forEach(function(contacts){ %>
                                        <% if (contacts.contactType == "Prospect" && contacts.contactStatus == "Sale Scheduled") { %>
                                            <tr>
                                                <td>
                                                    <strong><%= contacts.contactStrength%> - <a href="#" data-toggle="modal" data-backdrop="static" data-target="#modal<%=contacts._id%>"><%=contacts.firstName%> <%=contacts.lastName%></a></strong>
                                                </td>
                                            </tr>
                                    <% include ../pipeline/modal %>
                                    <% }; %>
                                <% }); %>
                            </table>
                        </div>
                        <div class= "col-sm-4" id= "prospectFollowUp">
                            <p>Todays Sales</p>
                                <table class="table table-hover small-rows">
                                    <% contacts.forEach(function(contacts){ %>
                                        <% if (contacts.contactType == "Customer" && contacts.contactStatus == "Sold Today") { %>
                                            <tr>
                                                <td>
                                                    <strong><%= contacts.contactStrength%> - <a href="#" data-toggle="modal" data-backdrop="static" data-target="#modal<%=contacts._id%>"><%=contacts.firstName%> <%=contacts.lastName%></a></strong>
                                                </td>
                                            </tr>
                                    <% include ../pipeline/modal %>
                                    <% }; %>
                                <% }); %>
                            </table>                            
                        </div>    
                    </div>
            </div>
        </div>
    </div> 

</div>



<% include ../contact/newModal %>
<% include ../partials/footer %>